  const closeBtn = document.getElementById('close-button');
  closeBtn.addEventListener('click', () => {
    setTimeout(() => {
      location.reload();
    }, 500);
  });

  // ------------- BACK BUTTON ------------- //
  const backBtn = document.getElementById('back-btn');
  backBtn.addEventListener('click', () => {
    setTimeout(() => {
      location.reload();
    }, 500);
  });
</script>
