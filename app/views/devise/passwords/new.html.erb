<div class="container registration-form">
  <h2 class="mb-4">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  #input_html: { autocomplete: "email" }
                  placeholder: "example@domain.com" %>
    </div>

    <div class="form-actions d-flex justify-content-center mt-5">
      <%= f.button :submit, "Send me reset instructions", class: "white-round-filled-btn", style: "width: auto;" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5 text-center" style="border-top: solid 1px white;">
    <p style="color: white; margin-top: 10px;">or <%= render "devise/shared/links" %></p>
  </div>
</div>
