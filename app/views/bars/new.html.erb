<div class="container mt-4">
  <h3>Create a new bar</h1>
  <div class="container mt-4">
    <%= simple_form_for @barsito do |f| %>
      <%= f.input :name %>
      <div class="d-flex justify-content-center">
        <%= f.button :submit, class: "white-round-filled-btn mt-2" %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-center">
    <%= link_to "Back", bars_path, class: "white-round-filled-btn mt-5" %>
  </div>
</div>
