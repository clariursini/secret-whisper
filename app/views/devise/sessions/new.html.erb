<div class="container registration-form">
  <h2 class="mb-4">Log in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  placeholder: "example@domain.com" %>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions text-center">
      <%= f.button :submit, "Log in", class: "white-round-filled-btn", style: "width: 120px;", id:"login-button" %>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-5 text-center" style="border-top: solid 1px white;">
    <p style="color: white; margin-top: 10px;">or <%= render "devise/shared/links" %></p>
  </div>

</div>
